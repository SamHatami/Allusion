<Window x:Class="Allusion.Views.OpenRefBoardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Allusion.ViewModels"
        xmlns:fav ="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
        xmlns:cm="http://caliburnmicro.com"
        d:DataContext="{d:DesignInstance Type=viewModels:OpenRefBoardViewModel}"
        mc:Ignorable="d"
        Title="Open or Choose Art Board" Height="300" Width="600" 
        WindowStyle="None" WindowStartupLocation="CenterOwner"
        cm:Message.Attach="[Key Escape] = [Cancel]">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Global Art Board Folder" />
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox  Grid.Column="0" Text="{Binding GlobalFolder}"/>
                <Button Grid.Column="1" x:Name="BrowseGlobalFolder" Content="..." Width="20"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Content="Art Boards" />
            <ListBox Grid.Row="1" x:Name="RefBoards" VerticalAlignment="Stretch" ItemsSource="{Binding RefBoardPaths}" SelectedItem="{Binding SelectedRefBoard}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Label Content="{Binding Name}"/>
                        
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <Grid Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions> 
            <Button Grid.Column="0" x:Name="New" Content="New" Margin="5,10,5,5"/>
            <Button Grid.Column="2" x:Name="Open" Content="Open" Margin="5,10,5,5"/>
            <Button Grid.Column="3" x:Name="Cancel" Content="Cancel" Margin="5,10,5,5"/>
        </Grid>
    </Grid>
</Window>